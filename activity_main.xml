<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/relativeTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/relativeContainerWaveup"
            android:background="#4880FE"
            android:layout_width="match_parent"
            android:layout_height="100dp">

<!--            <ImageView-->
<!--                -->
<!--               -->
<!--                android:layout_alignParentBottom="true"-->
<!--                android:layout_marginBottom="-2dp"-->
<!--                android:scaleType="fitXY"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:src="@drawable/ic_next_1"/>-->

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_next_1">
            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:background="#4880FE"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/relativeContainerWaveup"
            android:layout_marginTop="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_wave_up" />

        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Create a new account"
                android:textColor="#ffff"
                android:textSize="25sp" />

            <TextView
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textSize="38sp"
                android:textColor="#ffff"
                android:text="Sign up!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relativeTop"
        android:layout_marginTop="-1dp"
        android:background="#6D2CE1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_edittext_border"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_user_name" />

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#D3D1D1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textColorHint="#CAC8C8"
                android:hint="Full Name"
                android:padding="10dp"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_edittext_border"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_mail" />

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#D3D1D1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textColorHint="#CAC8C8"
                android:hint="Email Address"
                android:padding="10dp"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_edittext_border"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_lock" />

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#D3D1D1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textColorHint="#CAC8C8"
                android:hint="Create Password"
                android:padding="10dp"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_edittext_border"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_lock" />

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#D3D1D1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textColorHint="#CAC8C8"
                android:hint="Confirm Password"
                android:padding="10dp"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="Sign up                           "
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:textColorHint="#FAF8F8"
                android:textSize="28dp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_circle_blue"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_next" />
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeBottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="120dp">


        <ImageView

            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_wave_bottom"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Already have an account?"
                android:textColor="#6D2CE1"
                android:textSize="18sp" />

            <TextView
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textSize="24dp"
                android:textColor="#6D2CE1"
                android:text="Sign in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>